@model ShoppingCart.Areas.Administration.Models.LoginDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<environment include="Development">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/Login.css" />
</environment>
<h2>Login Form</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <!-- <div id="id01" class="modal"> -->
        <form class="modal-content animate" asp-action="Login" asp-controller="Login" asp-area="Administration" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="container">
                
                    <label asp-for="Email"><b>Username</b></label>
                    <input asp-for="Email" type="text" placeholder="Enter Email" name="Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                
                <br />
               
                <label asp-for="Password"><b>Password</b></label>
                <input asp-for="Password" type="password" placeholder="Enter Password" name="Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
                <br>
                

                <label>
                    <input type="checkbox" checked="checked" name="remember" asp-for="RememberMe" value="true"> Remember me
                </label>
                <br />
                <span class="text-danger pull-right"> <h2>@ViewBag.message</h2> </span>
                <br />
                <button type="submit" value="Create" class="btn btn-default" style="width:auto">Login</button>
            </div>

            @*<div class="container">
                <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>

            </div>*@
        </form>
    </div>
</div>
