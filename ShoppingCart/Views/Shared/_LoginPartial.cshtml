@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Administration" asp-controller="Login" asp-action="Logout" id="logoutForm" method="post" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li> <a href="javascript:document.getElementById('logoutForm').submit()">Log Off</a></li>
        </ul>
</form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li> <a id="SIgnUpLink" asp-area="Administration"  asp-controller="Login" asp-action="SignUp">Register</a></li>
        <li> <a id="LoginLink" asp-area="Administration" asp-controller="Login" asp-action="Login">Login</a></li>
    </ul>
}